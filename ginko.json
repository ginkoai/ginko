{
  "$schema": "https://ginko.ai/schemas/ginko-config.json",
  "version": "1.0",
  "project": {
    "name": "Ginko",
    "type": "monorepo"
  },
  "paths": {
    "docs": "docs",
    "sprints": "docs/sprints",
    "currentSprint": "docs/sprints/CURRENT-SPRINT.md",
    "prds": "docs/PRD",
    "adrs": "docs/adr",
    "architecture": "docs/architecture",
    "backlog": "backlog",
    "context": ".ginko/context/modules",
    "sessions": ".ginko/sessions",
    "bestPractices": ".ginko/best-practices"
  },
  "workMode": {
    "default": "think-build",
    "documentationDepth": {
      "hack-ship": [
        "currentSprint",
        "sessions"
      ],
      "think-build": [
        "currentSprint",
        "sessions",
        "adrs",
        "prds"
      ],
      "full-planning": [
        "currentSprint",
        "sessions",
        "adrs",
        "prds",
        "architecture",
        "bestPractices"
      ]
    }
  },
  "contextLoading": {
    "progressive": true,
    "maxDepth": 3,
    "followReferences": true,
    "priorityOrder": [
      "sessions",
      "currentSprint",
      "prds",
      "adrs",
      "context"
    ],
    "alwaysLoad": {
      "hack-ship": [
        ".ginko/context/core/project-structure.md",
        ".ginko/context/core/common-commands.md",
        ".ginko/context/core/context-pressure.md"
      ],
      "think-build": [
        ".ginko/context/core/project-structure.md",
        ".ginko/context/core/testing-patterns.md",
        ".ginko/context/core/code-conventions.md",
        ".ginko/context/core/common-commands.md",
        ".ginko/context/core/context-pressure.md"
      ],
      "full-planning": [
        ".ginko/context/core/project-structure.md",
        ".ginko/context/core/architecture-overview.md",
        ".ginko/context/core/testing-patterns.md",
        ".ginko/context/core/code-conventions.md",
        ".ginko/context/core/common-commands.md",
        ".ginko/context/core/git-workflow.md",
        ".ginko/context/core/context-pressure.md"
      ]
    },
    "moduleCategories": {
      "core": ".ginko/context/core",
      "patterns": ".ginko/context/patterns",
      "gotchas": ".ginko/context/gotchas",
      "archive": ".ginko/context/archive"
    }
  }
}
