{
  "name": "@ginkoai/mcp-client",
  "version": "0.6.1",
  "description": "MCP client for Ginko session capture and resume functionality",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ginkoai-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "context",
    "claude",
    "ai",
    "session-handoff",
    "development"
  ],
  "author": "Chris Norton <chris@ginko.ai>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*",
    "src/statusline/**/*",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  }
}
