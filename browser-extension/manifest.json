{
  "manifest_version": 3,
  "name": "Ginko - Claude.ai Companion",
  "version": "1.0.0",
  "description": "Intelligent context management and session handoffs for Claude.ai users",
  
  "permissions": [
    "storage",
    "sidePanel",
    "clipboardWrite",
    "tabs",
    "activeTab",
    "notifications"
  ],
  
  "host_permissions": [
    "https://claude.ai/*"
  ],
  
  "action": {
    "default_title": "Ginko - Open Sidebar"
  },
  
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.js", "sidebar.css"],
      "matches": ["https://claude.ai/*"]
    }
  ]
}