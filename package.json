{
  "name": "ginko",
  "version": "1.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:shared && npm run build:mcp && npm run prepare:api",
    "build:shared": "npm run build -w @ginko/shared",
    "build:mcp": "npm run build -w @ginko/mcp-server",
    "prepare:api": "bash scripts/prepare-api.sh",
    "test": "npm run test --workspaces --if-present && npm run test:graph",
    "test:graph": "jest --config jest.config.js",
    "test:graph:watch": "jest --config jest.config.js --watch",
    "test:graph:coverage": "jest --config jest.config.js --coverage",
    "dev": "vercel dev",
    "deploy": "vercel --prod",
    "check-deps": "npm ls",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "graph:setup": "tsx src/graph/scripts/setup-schema.ts",
    "graph:load-sample": "tsx src/graph/scripts/load-sample-data.ts",
    "graph:test-query": "tsx src/graph/scripts/test-context-query.ts",
    "graph:load-docs": "tsx src/graph/scripts/load-all-documents.ts",
    "graph:load-extended": "tsx src/graph/scripts/load-extended-documents.ts",
    "graph:embed": "tsx src/graph/scripts/generate-embeddings.ts",
    "graph:batch-embed": "tsx scripts/batch-embed-nodes.ts",
    "embeddings:generate": "tsx scripts/generate-embeddings.ts",
    "similarity:generate": "tsx scripts/generate-similarity-relationships.ts",
    "graph:test-embeddings": "tsx src/graph/scripts/test-embeddings.ts",
    "graph:extract-relationships": "tsx src/graph/scripts/extract-semantic-relationships.ts",
    "graph:create-semantic-rels": "tsx src/graph/scripts/create-semantic-relationships.ts",
    "migrate:export": "tsx scripts/export-neo4j-data.ts",
    "migrate:import": "tsx scripts/import-neo4j-data.ts",
    "lifecycle:run": "tsx scripts/event-lifecycle-manager.ts",
    "lifecycle:prune": "tsx scripts/prune-events.ts"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "commander": "^14.0.0",
    "dotenv": "^16.0.0",
    "neo4j-driver": "^6.0.1"
  }
}
