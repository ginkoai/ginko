{
  "compilerOptions": {
    "module": "Node20",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16"
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": ["src/**/*"]
}