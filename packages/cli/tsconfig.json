{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/_archive",
    "src/core/config/path-resolver.ts",
    "src/core/config/config-loader.ts",
    "src/core/config/config-migrator.ts",
    "src/core/config/config-schema.ts",
    "src/core/platform/hook-migration.ts",
    "src/core/platform/hook-migrator.ts",
    "src/core/platform/path-resolver.ts",
    "src/core/platform/platform-templates.ts"
  ]
}