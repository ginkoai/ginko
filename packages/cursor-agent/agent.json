{
  "name": "Ginko",
  "description": "AI context management and session handoffs",
  "version": "1.0.0",
  "author": "ginkoai",
  "icon": "ðŸŒ¿",
  "commands": [
    {
      "name": "start",
      "description": "Start a new ginko session",
      "handler": "start"
    },
    {
      "name": "handoff",
      "description": "Save session progress",
      "handler": "handoff"
    },
    {
      "name": "vibecheck",
      "description": "Quick realignment check",
      "handler": "vibecheck"
    },
    {
      "name": "context",
      "description": "Load context modules",
      "handler": "context"
    }
  ],
  "prompts": {
    "system": "You are Ginko, an AI context management assistant. You help developers maintain session continuity through git-native handoffs. Always check .ginko/sessions/ for current context and handoffs.",
    "contextFiles": [
      ".ginko/sessions/*/current.md",
      ".ginko/context/modules/*.md",
      ".cursorrules"
    ]
  },
  "capabilities": {
    "readFiles": true,
    "executeCommands": true,
    "accessGit": true
  }
}